<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				mouseDown="this.alpha = 0.5;"
				mouseUp="this.alpha = 1;">
	<fx:Declarations>
		<fx:String id="thumbnail">{data.thumbnail}</fx:String>
		<fx:String id="title">{data.title}</fx:String>
		<fx:String id="date">{data.date}</fx:String>
	</fx:Declarations>
	
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor color="#F2F2F2" />
		</s:fill>
	</s:Rect>
	
	<s:Image id="bg" source="@Embed(source='/../res/map_list_item_bg.png', scaleGridLeft='20', scaleGridRight='680', scaleGridTop='20', scaleGridBottom='390')"
			 width="100%" height="{bg.width * 41 / 70}" />
	
	<s:VGroup left="10" right="10" top="15" bottom="0" gap="0">
		<s:Image id="thumbView" source="@Embed('/../res/temp_thumb.png')" width="100%" height="{thumbView.width * 15 / 34}" scaleMode="stretch" />
		
		<s:Line width="100%">
			<s:stroke>
				<s:SolidColorStroke color="#42A79F" weight="2" />					
			</s:stroke>
		</s:Line>
		
		<s:Group width="100%" height="100%">
			<s:Label text="{title}" left="10" verticalCenter="-5" color="#464F4E" fontSize="14" />
			<s:Label text="{date}" right="10" verticalCenter="-5" color="#899F9C" fontSize="10" />
		</s:Group>
	</s:VGroup>	
</s:ItemRenderer>
