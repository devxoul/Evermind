<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		initialize="init()">
	<fx:Script>
		<![CDATA[
			private function init() : void
			{
				
			}
			
			
			private function onScrollerGestureZoom( e : TransformGestureEvent ) : void
			{
				var scale : Number = ( e.scaleX + e.scaleY ) * .5;
				scrollerContent.scaleX *= scale;
				scrollerContent.scaleY *= scale;
			}
		]]>
	</fx:Script>
	
	<s:Scroller width="100%" height="100%" gestureZoom="onScrollerGestureZoom(event)">
		<s:Group id="scrollerContent">
			<s:SpriteVisualElement id="canvas" width="1024" height="1024" />
		</s:Group>
	</s:Scroller>
</s:View>
